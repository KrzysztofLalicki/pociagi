<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pociagi.app.viewmodel.SelectStartAndEndStationViewController">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Wybierz datę i godzinę:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <DatePicker fx:id="datePicker" />
            <Spinner fx:id="timeSpinner" editable="true" />
         </children>
      </HBox>
      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Wybierz stacje początkową">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <fx:include fx:id="startStationView" source="SelectStationView.fxml" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Wybierz stacje końcową">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <fx:include fx:id="endStationView" source="SelectStationView.fxml" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="dalejButton" mnemonicParsing="false" text="Dalej" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
