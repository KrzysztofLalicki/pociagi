<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pociagi.app.viewmodel.SelectStartAndEndStationViewController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Wybierz stacje początkową">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <fx:include fx:id="startStationView" source="SelectStationView.fxml" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Wybierz stacje końcową">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Label>
                  <fx:include fx:id="endStationView" source="SelectStationView.fxml" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="wsteczButton" mnemonicParsing="false" text="Wstecz" />
            <Button fx:id="dalejButton" mnemonicParsing="false" text="Dalej" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
