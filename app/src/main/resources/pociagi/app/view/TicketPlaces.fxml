<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pociagi.app.viewmodel.TicketPlacesViewModel">

   <children>
      <!-- Główny kontener - VBox który trzyma wszystko -->
      <VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0"
            AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>

         <children>
            <!-- HBox z czterema kolumnami -->
            <HBox alignment="CENTER" spacing="20" prefHeight="100.0" prefWidth="560.0"
                  VBox.vgrow="ALWAYS">

               <children>
                  <!-- Klasa -->
                  <VBox alignment="CENTER" spacing="10" prefWidth="140.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Liczba miejsc klasa 1 :" style="-fx-font-weight: bold;"/>
                        <ChoiceBox fx:id="choiceBoxPlacesOne" prefWidth="140.0"/>
                     </children>
                  </VBox>

                  <!-- Liczba miejsc -->
                  <VBox alignment="CENTER" spacing="10" prefWidth="140.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Liczba miejsc klasa 2 :" style="-fx-font-weight: bold;"/>
                        <ChoiceBox fx:id="choiceBoxPlacesTwo" prefWidth="140.0"/>
                     </children>
                  </VBox>

                  <!-- Data -->
                  <VBox alignment="CENTER" spacing="10" prefWidth="140.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Data:" style="-fx-font-weight: bold;"/>
                        <DatePicker fx:id="datePicker" prefWidth="140.0"/>
                     </children>
                  </VBox>

                  <!-- Godzina -->
                  <VBox alignment="CENTER" spacing="10" prefWidth="140.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Godzina:" style="-fx-font-weight: bold;"/>
                        <HBox alignment="CENTER" spacing="5">
                           <children>
                              <Spinner fx:id="hourSpinner" prefWidth="60.0" editable="true"/>
                              <Label text=":"/>
                              <Spinner fx:id="minuteSpinner" prefWidth="60.0" editable="true"/>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>

            </HBox>

            <!-- Przycisk na dole -->
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="560.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#HandleButton" text="Dalej"
                          prefWidth="80.0" style="-fx-font-weight: bold;"/>
               </children>
            </HBox>

         </children>
      </VBox>
   </children>

</AnchorPane>