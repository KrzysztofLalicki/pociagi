<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="480.0" prefWidth="684.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pociagi.app.viewmodel.TicketPlacesViewModel">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <children>
            <HBox alignment="CENTER" maxHeight="100.0" prefHeight="100.0" prefWidth="560.0" spacing="20" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" prefHeight="337.0" prefWidth="143.0" spacing="10" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Liczba miejsc klasa 1 :" />
                        <ComboBox fx:id="comboBoxPlacesOne" prefWidth="140.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefWidth="140.0" spacing="10" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Liczba miejsc klasa 2 :" />
                        <ComboBox fx:id="comboBoxPlacesTwo" prefWidth="140.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefWidth="140.0" spacing="10" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Data:" />
                        <DatePicker fx:id="datePicker" prefWidth="140.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefWidth="140.0" spacing="10" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Godzina:" />
                        <HBox alignment="CENTER" spacing="5">
                           <children>
                              <Spinner fx:id="hourSpinner" editable="true" prefWidth="60.0" />
                              <Label text=":" />
                              <Spinner fx:id="minuteSpinner" editable="true" prefWidth="60.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="257.0" prefWidth="560.0">
               <children>
                  <VBox fx:id="dynamicBoxOne" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="140.0" spacing="10.0" />
                  <VBox fx:id="dynamicBoxTwo" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="140.0" spacing="10.0" />
                  <VBox prefHeight="200.0" prefWidth="140.0" />
                  <VBox prefHeight="200.0" prefWidth="140.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="560.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#HandleButton" prefWidth="80.0" style="-fx-font-weight: bold;" text="Dalej" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
